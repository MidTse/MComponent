<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 加载对话框相关操作 -->
    <style name="public_loadingDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="public_Dialog_Alpha_Animation">
        <item name="android:windowEnterAnimation">@anim/public_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/public_dialog_exit</item>
    </style>


    <!-- 分割线 -->
    <style name="public_line">
        <item name="android:background">@color/background</item>
    </style>

    <style name="public_line_vertical" parent="public_line">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="public_line_horizontal" parent="public_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>


    <!-- 公共样式 -->
    <style name="public_rootView">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background</item>
    </style>
    <style name="public_refreshLayout">
        <item name="android:id">@id/public_refreshLayout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="public_recyclerView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="public_scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

</resources>
